<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modalinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/modalTextView"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:gravity="center"
            android:padding="20dp"
            android:text="Bird (noun): a warm-blooded animal with feathers and wings, that lays eggs and has a beak. Birds are found worldwide and are known for their ability to fly, although not all species can fly."
            android:textAlignment="center" />

        <TextView
            android:id="@+id/exampleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="Example: I love waking up to the sound of birds singing in the morning." />

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Close" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>